 ---
interface Props {
	title: string;
	body: string;
	link: string;
}

const { link, title, body } = Astro.props;
---
 
 
 
 
 
 
 <div class="kard">
      <h2 class="card-title">{title}</h2>
      <a href={link} target="_blank" rel="noopener noreferrer" class="card-link">Enlace</a>
      <p class="card-body">{body}</p>
    </div>


